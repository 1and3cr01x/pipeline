apiVersion: v1
kind: Service
metadata:
  name: predict-{{PIPELINE-MODEL-TYPE}}-{{PIPELINE-MODEL-NAME}}-{{PIPELINE-MODEL-CHIP}}-{{PIPELINE-MODEL-TAG}}
  labels:
    app: predict-{{PIPELINE-MODEL-TYPE}}-{{PIPELINE-MODEL-NAME}}-{{PIPELINE-MODEL-CHIP}}-{{PIPELINE-MODEL-TAG}}
spec:
  type: LoadBalancer
  ports:
  - name: nginx 
    port: 6969 
    targetPort: 6969
  - name: nginx-canary
    port: 7070
    targetPort: 7070
  - name: model-server-python 
    port: 9876
    targetPort: 9876
  - name: model-server-python-canary
    port: 9877
    targetPort: 9877
  - name: tensorflow-serving 
    port: 9000
    targetPort: 9000
  - name: tensorflow-serving-canary
    port: 9001
    targetPort: 9001
  - name: model-server-python-prometheus
    port: 10254
    targetPort: 10254
  - name: model-server-python-prometheus-canary
    port: 10255
    targetPort: 10255
  - name: model-server-jvm
    port: 9040
    targetPort: 9040
  - name: prometheus 
    port: 9090
    targetPort: 9090
  - name: grafana 
    port: 3000
    targetPort: 3000
  - name: ui 
    port: 6333
    targetPort: 6333
  selector:
    app: predict-{{PIPELINE-MODEL-TYPE}}-{{PIPELINE-MODEL-NAME}}-{{PIPELINE-MODEL-CHIP}}-{{PIPELINE-MODEL-TAG}}
